{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["es6", "dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "ESNEXT",
        "declaration": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": "src",
        "paths": {
            "@soboro/styles": ["./apps/styles/index.css"],
            "@soboro/types": ["./apps/types/index.d.ts"],
            "@soboro/contexts": ["./apps/contexts/index.ts"],
            "@soboro/hooks": ["./apps/hooks/index.ts"],
            "@soboro/functions": ["./apps/functions/index.ts"],
            "@soboro/components/layouts": [
                "./apps/components/layouts/index.ts"
            ],
            "@soboro/components/base": ["./apps/components/base/index.ts"],
            "@soboro/components/links": [
                "./apps/components/core/links/index.ts"
            ],
            "@soboro/components/cards": [
                "./apps/components/core/cards/index.ts"
            ],
            "@soboro/components/forms": [
                "./apps/components/core/forms/index.ts"
            ],
            "@soboro/components/modals": [
                "./apps/components/core/modals/index.ts"
            ]
        },
        "incremental": true
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.js"]
}
